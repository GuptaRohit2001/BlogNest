        <li class="nav-item d-flex align-items-center ms-3">
          <button id="themeToggle" class="btn btn-outline-light btn-sm rounded-circle d-flex align-items-center justify-content-center" style="width:36px; height:36px;">
            <i class="bi bi-moon-stars" id="themeIcon"></i>
          </button>
        </li>
      </ul>
    </div>
  </div>
